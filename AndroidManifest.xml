<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.achyuthnfn.cnbfinal"
    android:installLocation="auto"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.achyuthnfn.cnbfinal.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.achyuthnfn.cnbfinal.GamePlay"
            android:label="@string/title_activity_game_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.achyuthnfn.cnbfinal.Glory"
            android:label="@string/title_activity_glory"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.achyuthnfn.cnbfinal.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.achyuthnfn.cnbfinal.StatsActivity"
            android:label="@string/title_activity_stats"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="com.achyuthnfn.cnbfinal.HowToPlay"
            android:label="@string/title_activity_how_to_play" 
            android:screenOrientation="portrait">
        </activity>
        <service 
            android:enabled="true"
            android:name="com.achyuthnfn.cnbfinal.NotificationSevice"
            />
        <receiver android:name="com.achyuthnfn.cnbfinal.AlarmReceiver">
        </receiver>
    </application>

</manifest>
